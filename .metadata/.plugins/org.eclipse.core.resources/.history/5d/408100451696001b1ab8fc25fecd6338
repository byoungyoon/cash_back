package com.example.cash.restcontroller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.cash.service.NoticeService;
import com.example.cash.vo.Notice;

import lombok.extern.slf4j.Slf4j;

@RestController
@Slf4j
public class NoticeRestController {
	@Autowired NoticeService noticeService;
	
	@GetMapping("/getNotice")
	public List<List<String>> getNotice(){
		List<List<String>> returnList = new ArrayList<List<String>>();
		for(int i=0;i<noticeService.getNotice().size(); i++) {
			List<String> list = new ArrayList<>();
			Integer noticeNo = noticeService.getNotice().get(i).getNoticeNo();
			Integer noticeCount = noticeService.getNotice().get(i).getNoticeCount();
			list.add(noticeNo.toString());
			list.add(noticeService.getNotice().get(i).getNoticeTitle());
			list.add(noticeCount.toString());
			list.add(noticeService.getNotice().get(i).getCreateDate());
			returnList.add(list);
		}
		
		
		return returnList;
	}
}
