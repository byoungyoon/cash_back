package com.example.cash.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.example.cash.auth.JwtTokenUtil;
import com.example.cash.mapper.CashbookMapper;
import com.example.cash.vo.Cashbook;

import lombok.extern.slf4j.Slf4j;

@Service
@Transactional
@Slf4j
public class CashbookService {
	@Autowired CashbookMapper cashbookMapper;
	@Autowired JwtTokenUtil jwtTokenUtil;
	
	public List<Cashbook> getIncomeChart(String token){
		token = token.substring(7);
		String userId = null;
		try {
			userId = jwtTokenUtil.getUsernameFromToken(token);
		} catch (IllegalArgumentException e) {
			e.printStackTrace();
		}
		
		List<Cashbook> list = cashbookMapper.selectIncomeChart(userId);
		for(int i=0; i<list.size(); i++) {
			log.info("{}", "##########" + list.get(i));
		}
		
		return cashbookMapper.selectIncomeChart(userId);
	}
}
